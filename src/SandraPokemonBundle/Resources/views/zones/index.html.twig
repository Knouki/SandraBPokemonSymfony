{% extends 'base.html.twig' %}

{% block body %}
    <h1>Zones list</h1>

    <table>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Idzones</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for zone in zones %}
            <tr>
                <td><a href="{{ path('zones_show', { 'id': zone.idZones }) }}">{{ zone.nom }}</a></td>
                <td>{{ zone.idZones }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('zones_show', { 'id': zone.idZones }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('zones_edit', { 'id': zone.idZones }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('zones_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
