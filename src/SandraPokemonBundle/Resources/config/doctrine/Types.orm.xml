<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="SandraPokemonBundle\Entity\Types" table="types">
    <id name="idTypes" type="integer" column="id_types">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="nom" type="string" column="nom" length="25" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <many-to-many field="idTypePokemons" target-entity="TypeDePokemons" mapped-by="idTypes" fetch="LAZY"/>
    <many-to-many field="idTypesFaible" target-entity="Types" inversed-by="idTypesBase" fetch="LAZY">
      <join-table name="fortcontre">
        <join-columns>
          <join-column name="id_types_base" referenced-column-name="id_types"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="id_types_faible" referenced-column-name="id_types"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
    <many-to-many field="idTypesFort" target-entity="Types" inversed-by="idTypesBase" fetch="LAZY">
      <join-table name="faiblecontre">
        <join-columns>
          <join-column name="id_types_base" referenced-column-name="id_types"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="id_types_fort" referenced-column-name="id_types"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
