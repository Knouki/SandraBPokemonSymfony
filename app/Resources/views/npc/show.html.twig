{% extends 'base.html.twig' %}

{% block body %}
    <h1>Npc</h1>

    <table>
        <tbody>
            <tr>
                <th>Iddresseur</th>
                <td>{{ npc.idDresseur }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ npc.nom }}</td>
            </tr>
            <tr>
                <th>Profession</th>
                <td>{{ npc.profession }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ npc.texte }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ npc.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('npc_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('npc_edit', { 'id': npc.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
